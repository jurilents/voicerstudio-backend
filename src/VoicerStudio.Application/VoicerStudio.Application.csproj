  </ItemGroup>

  <ItemGroup>
    <Folder Include="Infrastructure\Internal\" />
  </ItemGroup>

  <ItemGroup>
    <ProjectReference Include="..\VoicerStudio.Database\VoicerStudio.Database.csproj" />
  </ItemGroup>


