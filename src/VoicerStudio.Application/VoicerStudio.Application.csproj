    <PackageReference Include="Whisper.net" Version="1.4.7" />
    <PackageReference Include="Whisper.net.Runtime" Version="1.4.7" />
  </ItemGroup>

  <ItemGroup>
    <Reference Include="Msacm32">
      <HintPath>Msacm32.dll</HintPath>
    </Reference>
    <Reference Include="SoundTouch">
      <HintPath>SoundTouch.dll</HintPath>
    </Reference>
  </ItemGroup>

  <PropertyGroup>
    <GenerateDocumentationFile>true</GenerateDocumentationFile>
    <NoWarn>1591</NoWarn>
  </PropertyGroup>

  <PropertyGroup>
    <NuGetPackageRoot>$(USERPROFILE)\.nuget\packages</NuGetPackageRoot>
  </PropertyGroup>

  <ItemGroup Condition="'$(Configuration)|$(Platform)' == 'Release|x64'">
